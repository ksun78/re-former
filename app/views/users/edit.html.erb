<h1>Edit</h1>

<% if @user.errors.any? %>
	<div>
		<ul>
			<% @user.errors.full_messages.each do |error| %>
				<li>
					<%= error %>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for @user do |f| %>
	Username: <%= f.text_field :username %><br/>
	Email: <%= f.text_field :email %><br/>
	Password: <%= f.password_field :password %><br/>
	<%= f.submit "Sign Up" %>
<% end %>